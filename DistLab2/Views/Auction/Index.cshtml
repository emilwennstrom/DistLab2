@model IEnumerable<DistLab2.ViewModels.AllAuctionsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1><u>Ongoing auctions</u></h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.highestBid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.highestBid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                    @Html.ActionLink("Details", "Details", new { id=item.Id, name = item.Name}) |
                    @Html.ActionLink("Add bid", "AddBid", new { id = item.Id, username = item.Username, auctionName = item.Name})
            </td>
        </tr>
}
    </tbody>
</table>


<p>@Html.ActionLink("Create auction", "Create")</p>
