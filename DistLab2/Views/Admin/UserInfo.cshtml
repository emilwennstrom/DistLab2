@model IEnumerable<DistLab2.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "UserInfo";
}

<h1>UserInfo</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>

                    @Html.ActionLink("View Auctions", "ShowAuctions2", new { id=item.Id, UserName=item.UserName }) |
                <form asp-action="DeleteUser" asp-controller="Admin" asp-route-id="@item.Id" method="post" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <button type="submit" class="btn btn-link p-0 m-0 align-baseline">Delete User</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
